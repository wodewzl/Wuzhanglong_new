<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/C3">

    <RelativeLayout
        style="@style/padding_15_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/C1">

        <ImageView
            android:id="@+id/edit_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/check_img"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/divier"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:padding="3dp"
            android:src="@drawable/check_normal"/>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/edit_img"
            android:text="李小姐"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/check_img"
            android:text="18602727134"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name_tv"
            android:layout_below="@id/name_tv"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/check_img"
            android:ellipsize="end"
            android:lineSpacingExtra="8dp"
            android:lines="2"
            android:maxLines="2"
            android:text="湖北省枣阳市鹿头镇简庄村一组湖北省枣阳市鹿头镇简庄村一组"
            android:textColor="@color/C5"
            android:textSize="11sp" />


    </RelativeLayout>

</LinearLayout>
