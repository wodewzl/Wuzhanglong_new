<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/C1"
              android:orientation="vertical">

    <TextView
        style="@style/padding_15_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/my_go"
        android:drawablePadding="8dp"
        android:text="为了账户安全，请验证手机号"
        />

    <View
        style="@style/view_divider"/>

    <TextView
        style="@style/padding_15_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="验证手机"/>

    <LinearLayout
        style="@style/margin_15_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_kongxin_white_gray"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="1dp"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/C1"
            android:drawableLeft="@drawable/my_go"
            android:drawablePadding="10dp"
            android:hint="输入手机号"/>

        <View
            style="@style/view_divider"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/C1"
            android:drawableLeft="@drawable/my_go"
            android:drawablePadding="10dp"
            android:hint="输入密码"/>
    </LinearLayout>
    <RelativeLayout
        style="@style/margin_15_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_kongxin_white_gray"
        android:paddingBottom="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="1dp">

        <EditText
            android:id="@+id/phone_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/C1"
            android:drawableLeft="@drawable/my_go"
            android:drawablePadding="10dp"
            android:hint="输入手机号"/>

        <View
            android:id="@+id/divider_v"
            style="@style/view_divider"
            android:layout_below="@id/phone_tv"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/divider_v"
            android:background="@color/C1"
            android:drawableLeft="@drawable/my_go"
            android:drawablePadding="10dp"
            android:hint="输入密码"/>
        <View
            android:id="@+id/divider_v2"
            style="@style/view_divider"
            android:layout_below="@id/phone_tv"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/divider_v2"
            android:background="@color/C1"
            android:drawableLeft="@drawable/my_go"
            android:drawablePadding="10dp"
            android:hint="密码（长度6-16位，请牢记您的密码）"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/C1"
        />



</LinearLayout>
