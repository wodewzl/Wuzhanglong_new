<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/C1"
              android:orientation="vertical">

    <TextView
        style="@style/padding_15_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="登录注册"
        android:textSize="14sp"/>

    <LinearLayout
        style="@style/margin_15_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:background="@drawable/corners_30_gray"
            android:gravity="center"

            android:text="手机号登录"
            android:textColor="@color/C5"
            />

        <TextView
            android:id="@+id/regist_tv"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/corners_30_red"
            android:gravity="center"

            android:text="手机号注册"
            android:textColor="@color/C1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:background="@color/C3_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="以下是第三方登录"
            android:textColor="@color/C5"
            android:textSize="11sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_weight="1"
            android:background="@color/C3_1"/>
    </LinearLayout>

    <LinearLayout
        style="@style/padding_15_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_weixin_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/weixin_img"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/C5"
            android:textSize="11sp"
    />

        <TextView
            android:id="@+id/login_qq_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/qq_img"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/C5"
            android:textSize="11sp"
      />

    </LinearLayout>
</LinearLayout>
