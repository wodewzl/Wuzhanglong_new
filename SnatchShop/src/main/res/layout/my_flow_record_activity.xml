<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C3"
    android:orientation="vertical">

    <com.wuzhanglong.library.view.AutoSwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/C3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/C1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="日期" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="操作" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="积分情况" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">


                <!--没数据-->

                <LinearLayout
                                android:id="@+id/ll_no_data"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:fillViewport="true"
                              android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/no_content_layout"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/C2"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/adapter_no_content_tv"
                            style="@style/F3C6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/base_no_content"
                            android:gravity="center"
                            android:text="没有兑换记录"/>


                        <TextView
                            android:id="@+id/tv_to_buy"
                            android:padding="@dimen/dp_5"
                            android:background="@drawable/buy_btn_back"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="购买流量"
                            android:textColor="@color/_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <!--有数据-->
                <com.github.jdsjlzx.recyclerview.LuRecyclerView
                    android:visibility="gone"
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    />

            </RelativeLayout>


        </LinearLayout>
    </com.wuzhanglong.library.view.AutoSwipeRefreshLayout>
</LinearLayout>
