<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:qinc="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/C1"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <TextView
        style="@style/padding_15_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="抢购有风险，参与需谨慎！"/>

    <View style="@style/view_divider"/>


    <TextView
        style="@style/padding_15_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="抢购次数"
        android:textColor="@color/C5"/>

    <com.beisheng.snatch.view.NumberButton
        android:id="@+id/number_bt"
        android:layout_width="330dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        qinc:buttonWidth="25dp"
        qinc:editable="true"
        qinc:textColor="@color/C5"
        qinc:textSize="4sp"
        qinc:textWidth="280dp"
        />

    <LinearLayout
        style="@style/margin_15_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/count1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="5"
            android:background="@drawable/frame_kongxin_white_gray"/>

        <TextView
            android:id="@+id/count2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="20"
            android:background="@drawable/frame_kongxin_white_gray"/>

        <TextView
            android:id="@+id/count3_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="50"
            android:background="@drawable/frame_kongxin_white_gray"/>

        <TextView
            android:id="@+id/count4_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="100"
            android:background="@drawable/frame_kongxin_white_gray"/>

        <TextView
            android:id="@+id/count5_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="疯抢"
            android:background="@drawable/frame_kongxin_white_gray"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="(如果本期次数被抢光，参与次数自动返还账户)"
        android:textColor="@color/colorAccent"
        android:textSize="11sp"/>

    <View style="@style/view_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="支付方式"
            android:textColor="@color/C5"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/pay_type_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/my_go"
            android:gravity="center_vertical|right"
            android:text="支付方式"
            android:textSize="11sp"/>

    </LinearLayout>

    <View style="@style/view_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="红包"
            android:textColor="@color/C5"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/red_money_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/my_go"
            android:gravity="center_vertical|right"
            android:text="支付方式"
            android:textColor="@color/colorAccent"
            android:textSize="11sp"/>

    </LinearLayout>

    <View style="@style/view_divider"/>

    <TextView
        android:id="@+id/buy_tv"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corners_5_red"
        android:gravity="center"
        android:text="立即抢购"
        android:textColor="@color/C1"/>
</LinearLayout>
