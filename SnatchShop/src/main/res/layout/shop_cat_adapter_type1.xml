<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:qinc="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/C1"
                android:gravity="center"
                android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/C1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.rey.material.widget.CheckBox
                android:id="@+id/check_box"
                style="@style/SnatchShopCheckBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <View
                android:id="@+id/view_check"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="gone"/>
        </FrameLayout>


        <ImageView
            android:id="@+id/shop_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="吴二少舰旗店"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="花花公子凉鞋"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="抢购"/>

                <com.beisheng.snatch.view.NumberButton
                    android:id="@+id/number_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    qinc:buttonWidth="25dp"
                    qinc:editable="false"
                    qinc:textColor="@color/C5"
                    qinc:textSize="4sp"
                    qinc:textWidth="90dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="次"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/alpha_60_black"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center">-->

        <!--</LinearLayout>-->

        <TextView
            android:id="@+id/collect_tv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_circle_01"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/see_same_tv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_circle_01"
            android:gravity="center"
            android:text="看相似"
            android:textColor="@color/C1"/>

        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_circle_01"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/C1"/>

    </LinearLayout>
</RelativeLayout>
