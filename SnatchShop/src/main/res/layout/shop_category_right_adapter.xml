<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/left_menu_item"
              style="@style/padding_15_10"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/C1"
              android:clickable="true"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/shop_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="菜单"
            android:textColor="@color/C5"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/snatch_bt"
            android:layout_marginTop="5dp"
            android:progress="40"
            android:progressDrawable="@drawable/progressbar_horizontal_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="强暴进度1"
                    android:textColor="@color/C7"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/remain_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/total_count_tv"
                    android:text="强暴进度2"
                    android:textColor="@color/C7"
                    android:textSize="11sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/snatch_bt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/colorAccent"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>