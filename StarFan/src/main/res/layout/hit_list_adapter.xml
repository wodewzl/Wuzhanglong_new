<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/padding_15_10"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:background="@color/C1"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <View
        android:id="@+id/rank_view"
        android:layout_width="1dp"
        android:layout_height="44dp"
        android:background="@color/hit_one"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/user_icon_def"
        app:civ_border_color="@color/C1"
        app:civ_border_width="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蔡徐坤 9.4分"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱慕值："
                android:textColor="@color/star_gray"
                android:textSize="@dimen/sp_10"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:progress="40"
                android:progressDrawable="@drawable/progressbar_horizontal_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="魅力值："
                android:textColor="@color/star_gray"
                android:textSize="@dimen/sp_10"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:progress="40"
                android:progressDrawable="@drawable/progressbar_horizontal_white"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/hit_tv"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="打榜"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"/>

</LinearLayout>
