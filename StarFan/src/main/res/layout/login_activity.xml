<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <ImageView
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:layout_marginTop="115dp"
        android:background="@mipmap/login_logo" />


    <TextView
        android:id="@+id/login_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/corners_white_15"
        android:gravity="center"
        android:maxLength="11"
        android:text="手机登录"
        android:textColor="@color/colorAccent"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/regist_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/frame_kongxin_write_15"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/C1"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tourist_mode_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="先去看看"
        android:textColor="@color/C1"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="115dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:background="@color/alpha_40_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他登录方式"
            android:textColor="@color/C1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:background="@color/alpha_40_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_weixin_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/weixin_img" />

        <ImageView
            android:id="@+id/login_qq_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/qq_img" />

        <ImageView
            android:id="@+id/login_xinlang_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/xinlang_img" />
    </LinearLayout>
</LinearLayout>
