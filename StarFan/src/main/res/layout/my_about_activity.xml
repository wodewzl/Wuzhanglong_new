<?xml version="1.0" encoding="utf-8"?>

<com.wuzhanglong.library.view.ReboundScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C3"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorAccent"/>

        <TextView

            style="@style/padding_left_18_right_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我真是房价就是鹿鼎记鹿鼎记鹿鼎记的理解奥兰多都拉进来的煎熬了房间按附件奥利弗杰拉德放假啊了解"
            android:textColor="@color/star_black"/>

        <TextView
            style="@style/padding_left_18_right_18"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="商务合作"
            android:textColor="@color/star_gray_title"/>

        <LinearLayout

            style="@style/padding_left_18_right_18"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/C1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电话"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/name_tv"
                android:text="18602727134"
                android:textColor="@color/star_gray"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            style="@style/padding_left_18_right_18"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/C1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工作邮箱"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/name_tv"
                android:text="944908457@qq.com"
                android:textColor="@color/star_gray"
                android:textSize="10sp"/>
        </LinearLayout>

        <TextView
            style="@style/padding_left_18_right_18"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="关注我们"
            android:textColor="@color/star_gray_title"/>

        <LinearLayout
            style="@style/padding_left_18_right_18"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/C1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工作邮箱"
                />

            <TextView
                android:id="@+id/tv_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/name_tv"
                android:text="944908457@qq.com"
                android:textColor="@color/star_gray"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            style="@style/padding_left_18_right_18"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/C1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工作邮箱"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/name_tv"
                android:text="944908457@qq.com"
                android:textColor="@color/star_gray"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

</com.wuzhanglong.library.view.ReboundScrollView>


