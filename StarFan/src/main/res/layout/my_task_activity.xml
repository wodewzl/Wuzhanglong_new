<?xml version="1.0" encoding="utf-8"?>

<com.wuzhanglong.library.view.ReboundScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C3"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/C1"
            android:gravity="center"
            android:text="你还有新手任务未完成，请完善资料"
            android:textColor="@color/colorAccent" />


        <LinearLayout
            style="@style/padding_left_15_right_15"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@color/C1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/task_01_img"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="签到" />

            <TextView
                android:id="@+id/mily_01_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/name_tv"
                android:layout_weight="1"
                android:text="1000米币" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/status_01_tv"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="签到"
                android:textColor="@color/colorAccent"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/padding_left_15_right_15"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="1dp"
            android:background="@color/C1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/task_02_img"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="点赞" />

            <TextView
                android:id="@+id/mily_02_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1000米币" />

            <TextView
                android:id="@+id/count_02_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/name_tv"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/status_02_tv"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="签到"
                android:textColor="@color/colorAccent"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/padding_left_15_right_15"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="1dp"
            android:background="@color/C1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/task_03_img"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
