<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/C3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:orientation="vertical"
        style="@style/padding_15_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/C1">
        
        <View
            android:id="@+id/paurse_bg"
            android:layout_width="@dimen/dp_315"
            android:layout_height="@dimen/dp_139"
            style="@style/margin_15_10"
            android:background="@drawable/bg_gradient_corners"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="补签卡"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_36"
            android:textColor="@color/C1"/>

        <TextView
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="立即使用"
            android:layout_marginTop="@dimen/dp_106"
            android:layout_marginRight="@dimen/dp_36"
            android:background="@color/C1"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/desc_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paurse_bg"
            android:text="使用说明："
            android:textSize="@dimen/sp_10"
            android:textColor="@color/star_gray"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc_title_tv"
            android:text="使用后，获得爱奇艺会员月卡一张"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="10dp"
            android:textColor="@color/star_gray"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc_tv"
            android:text="截止日期：2019-5-10"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="10dp"
            android:textColor="@color/star_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/time_tv"
            android:text="进行中"
            android:textSize="@dimen/sp_10"
           android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>
</LinearLayout>
