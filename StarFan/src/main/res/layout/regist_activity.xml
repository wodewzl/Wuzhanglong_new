<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginPhoneActivity"
    android:orientation="vertical"
    android:background="@color/C3">

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/C1"
        android:hint="请输入手机号"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/C1"
        android:layout_marginTop="0.5dp">
        <EditText
            android:id="@+id/code_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/C1"
            android:hint="请输入验证码"
         />
        <TextView
            android:id="@+id/send_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:textColor="@color/colorAccent"
            android:gravity="center"/>
    </LinearLayout>
    <EditText
        android:id="@+id/pwd_et"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/C1"
        android:hint="请输入密码"
        android:layout_marginTop="0.5dp"
        android:paddingLeft="15dp"/>
    <EditText
        android:id="@+id/pwd_sure_et"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/C1"
        android:hint="请确认密码"
        android:layout_marginTop="0.5dp"
        android:paddingLeft="15dp"/>

    <Button
        android:id="@+id/ok_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_gradient_corners_30"
        android:textColor="@color/C1"
        android:textSize="15sp"
        android:text="确定"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册代表您已阅读并同意"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/star_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《星米粒用户协议和隐私条款》"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"/>
</LinearLayout>