<?xml version="1.0" encoding="utf-8"?>
<com.wuzhanglong.library.view.ReboundScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C3"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pay_status_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/C1"
            android:drawableTop="@drawable/pay_fail"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="啊哦，缴费失败了！"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/layout_01"
            style="@style/padding_15_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/C1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号"
                android:textColor="@color/C5"/>

            <TextView
                android:id="@+id/tv_value_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_02"
            style="@style/padding_15_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/C1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号"
                android:textColor="@color/C5"/>

            <TextView
                android:id="@+id/tv_value_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_03"
            style="@style/padding_15_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/C1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号"
                android:textColor="@color/C5"/>

            <TextView
                android:id="@+id/tv_value_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_04"
            style="@style/padding_15_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/C1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号"
                android:textColor="@color/C5"/>

            <TextView
                android:id="@+id/tv_value_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_05"
            style="@style/padding_15_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/C1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号"
                android:textColor="@color/C5"/>

            <TextView
                android:id="@+id/tv_value_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancle_tv"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="70dp"
                android:background="@color/FUBColor15"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/C1"

                android:textSize="15sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/ok_tv"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"

                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="充  值"
                android:textColor="@color/C1"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>
</com.wuzhanglong.library.view.ReboundScrollView>
