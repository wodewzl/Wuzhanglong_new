<?xml version="1.0" encoding="utf-8"?>
<com.wuzhanglong.library.view.ReboundScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C3"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/padding_15_10"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/C1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/withdraw_1"
                android:drawablePadding="8dp"
                android:text="持卡人："
                android:textColor="@color/C5" />

            <EditText
                android:id="@+id/et_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/C1"
                android:gravity="right|center_vertical"

                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/padding_15_10"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="0.8dp"
            android:background="@color/C1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/withdraw_2"
                android:drawablePadding="8dp"
                android:text="手机号："
                android:textColor="@color/C5" />

            <EditText
                android:id="@+id/et_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/C1"
                android:gravity="right|center_vertical"

                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/padding_15_10"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="0.8dp"
            android:background="@color/C1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/withdraw_3"
                android:drawablePadding="8dp"
                android:text="体现类型："
                android:textColor="@color/C5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/C1"
                android:drawablePadding="@dimen/dp_8"
                android:drawableRight="@drawable/my_go"
                android:gravity="right|center_vertical"

                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/padding_15_10"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="0.8dp"
            android:background="@color/C1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/withdraw_4"
                android:drawablePadding="8dp"
                android:text="支行名称："
                android:textColor="@color/C5" />

            <EditText
                android:id="@+id/et_03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/C1"
                android:gravity="right|center_vertical"

                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/padding_15_10"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="0.8dp"
            android:background="@color/C1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/withdraw_5"
                android:drawablePadding="8dp"
                android:text="银行卡号："
                android:textColor="@color/C5" />

            <EditText
                android:id="@+id/et_04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/C1"
                android:gravity="right|center_vertical"

                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/padding_15_10"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="0.8dp"
            android:background="@color/C1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/withdraw_6"
                android:drawablePadding="8dp"
                android:text="体现金额："
                android:textColor="@color/C5" />

            <EditText
                android:id="@+id/et_05"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/C1"
                android:gravity="right|center_vertical"

                android:textColor="@color/FUBColor3"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/ok_tv"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="确认提现"
            android:textColor="@color/C1"
            android:textSize="15sp" />
    </LinearLayout>
</com.wuzhanglong.library.view.ReboundScrollView>
