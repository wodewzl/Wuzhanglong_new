<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EEEEEE">


    <TextView
        android:id="@+id/time_tv"
        style="@style/padding_15_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2015-13-12"
        android:textColor="@color/C5"
        android:textSize="11sp" />

    <LinearLayout
        style="@style/padding_15_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/frame_kong_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来看消息把" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我不行啊啊啊啊啊啊"
            android:textColor="@color/C5"
            android:textSize="11sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="@color/C3_1" />

        <TextView
            android:id="@+id/read_all_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/my_go"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="11sp"
            android:text="阅读全文" />
    </LinearLayout>

</LinearLayout>
