        <item name="android:textColor">@color/C4</item>
        <item name="android:textSize">12sp</item>
        <!--<item name="android:windowAnimationStyle">@style/HoloThemeActivityAnimation</item>-->
        <!--<item name="colorPrimary">#20B490</item>-->
